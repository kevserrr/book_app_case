<h1 style="color:green; padding:15px">My Books</h1>
<td><%= link_to 'Dashboard' , dashboard_index_url  %></td>
  
<table class="table">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Page Count</th>
    <th>Status</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>
 
  <% @book.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.page_count %></td>
      <td><%= book.status %></td>

      
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book_path(book),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Book', new_book_path %>
<%= link_to 'Home Page', root_path %>

