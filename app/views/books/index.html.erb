<section class="mt-5">
  <div class="container">
    <div class="row text-center">
      <div class="col-md-6 mx-auto">

        <h1 style="color:#3F2F3E; font-size:16pt; margin-bottom:10px; font-family: Verdana, Geneva, Tahoma, sans-serif;"><%= params[:category] %> Books</h1>

        <% if @book.count == 0 %>
          <div class="alert alert-info" role="alert">
              There are no books in this category
          </div>
          <span style="color:#3F2F3E; font-family: Verdana, Geneva, Tahoma, sans-serif;">Do you want to add a new book? <%= link_to 'Add New Book', new_book_path, class: "btn btn-sm btn-outline-dark" %></span>
        <% else %>
          <ul class="list-group">
            <% @book.each do |book| %>
              <li class="list-group-item"><%= book.title %></li>
            <% end %>
          </ul>
        <% end %>
        

      </div>
    </div>
  </div>
</section>


