<section class="mt-5">
  <div class="container">
    <div class="row text-center">
      <div class="col-md-6 mx-auto">
    
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<h2 style="color:#3F2F3E; font-size:25pt; padding:30px;">User Login</h2>


  <div class="field mb-2">
    <%= f.label :email, :style => 'color:#3F2F3E; font-size:14pt;' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control'  %>
  </div>


  <div class="field mb-2">
    <%= f.label :password, :style => 'color:#3F2F3E; font-size:14pt;' %><br />
    <%= f.password_field :password, autocomplete: "current-password", :class => 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, :style => 'color:#3F2F3E; font-size:10pt;' %>
    </div>
  <% end %>

  <div class="actions"></div>
    <%= f.submit "Log in", :class => 'btn btn-outline-dark mt-2', :style => 'width:150px;'%>
  </div>
<% end %>

</div>

 <div class="col-md-12" style="margin-right:100px;">
<%= render "devise/shared/links" %>
</div>

      </div> 
    </div>
  </div>
</section>



















    

 

