<div style="padding-top:30px; margin-bottom:20px">
<h5 style="color:green">Username: <%= @user.username %></h5>
<h5 style="color:green">User email: <%= @user.email%></h5>
</div>

<h4 style="color:green">Shareable Books</h4>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Show</th>   
  </tr>
 
  <% @user.books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= link_to 'Show', book_path(book) %></td>   
    </tr>
  <% end %>
</table>